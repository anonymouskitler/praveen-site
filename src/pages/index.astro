---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';

import Features from '~/components/widgets/Features.astro';

import Content from '~/components/widgets/Content.astro';

import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Professional Accounting & Tax Services',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:mail',
      },
      { text: 'Our Services', href: '#services' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/6863280/pexels-photo-6863280.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
      alt: 'Indian Chartered Accountancy Firm',
    }}
  >
    <Fragment slot="title">
      Professional Services for <span class="text-accent dark:text-white highlight">Financial Excellence</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline"> Comprehensive accounting, taxation, and business advisory services. </span>
      <span class="block mb-1 sm:hidden font-bold text-blue-600">Professional Financial Services.</span>
      Services include Audits, Income Tax, Company Law, Business Registration, and NRI Services.
    </Fragment>
  </Hero>

  <!-- Features Widget -->
  <Features
    id="services"
    tagline="Services"
    title="Professional Services"
    subtitle="We offer professional services to support your business needs"
    items={[
      {
        title: 'Audit Services',
        description: 'Statutory audits, internal audits, and compliance reviews.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Income Tax',
        description: 'Tax planning, return filing, and consultancy services for individuals and businesses.',
        icon: 'tabler:calculator',
      },
      {
        title: 'Company Law',
        description: 'Assistance with company formation, compliance, and regulatory requirements.',
        icon: 'tabler:building',
      },
      {
        title: 'Business Registration',
        description: 'Registration services for companies, trademarks, and business licenses.',
        icon: 'tabler:certificate',
      },
      {
        title: 'NRI Services',
        description: 'Financial and tax services for Non-Resident Indians including FEMA compliance.',
        icon: 'tabler:world',
      },
      {
        title: 'Accounting Services',
        description: 'Professional accounting and bookkeeping services for businesses.',
        icon: 'tabler:arrows-right-left',
      },
    ]}
  />

  <!-- Content Widget -->
  <Content
    isReversed
    tagline="About Us"
    title="Our Experience"
    items={[
      {
        title: 'Professional Experience',
        description: 'Serving clients with professional financial services since 2014.',
      },
      {
        title: 'Professional Team',
        description: 'Qualified professionals providing accounting and taxation services.',
      },
      {
        title: 'Client Services',
        description: 'Focused on understanding and addressing client requirements.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1507679799987-c73779587ccf?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2071&q=80',
      alt: 'Professional Team',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        Professional Financial Services
      </h3>
      Comprehensive solutions for your financial requirements
    </Fragment>
  </Content>

  <!-- Stats Widget -->
  <Stats
    stats={[
      { title: 'Offices', amount: '2' },
      { title: 'Professional Staff', amount: '40+' },
      { title: 'Years of Service', amount: '10+' },
      { title: 'Clients Served', amount: '500+' },
    ]}
  />

  <!-- FAQs Widget -->
  <FAQs
    title="Common Questions"
    subtitle="Information about our professional services"
    tagline="Information"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'Which accounting software do you work with?',
        description:
          'We work with various accounting software including Tally Prime, Zoho Books, Marg ERP, and Vyapar. Our services include software implementation and support for existing clients.',
      },
      {
        title: 'What is the recommended frequency for professional services?',
        description:
          'Professional services can be engaged on monthly or quarterly basis depending on business requirements. Regular engagement helps maintain compliance and proper financial records.',
      },
      {
        title: 'What professional services do you offer?',
        description:
          'We provide accounting, auditing, taxation, and regulatory compliance services. Our team utilizes current technology solutions to deliver professional services efficiently.',
      },
      {
        title: 'How do you assist with tax planning?',
        description:
          'We provide tax planning services within the legal framework, including investment planning and utilizing available deductions and exemptions in compliance with tax laws.',
      },
      {
        title: 'What documentation is required for accounting and audit services?',
        description:
          'Required documentation includes books of accounts, bank statements, invoice records, expense vouchers, and statutory registers. We provide guidance on maintaining proper documentation.',
      },
      {
        title: 'Do you provide business advisory services?',
        description:
          'We offer business advisory services including financial feasibility studies, restructuring assistance, and growth planning within the scope of professional services.',
      },
    ]}
  />

  <!-- CallToAction Widget -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact Us',
        href: '/contact',
        icon: 'tabler:mail',
      },
    ]}
  >
    <Fragment slot="title"> Professional Services </Fragment>

    <Fragment slot="subtitle"> Connect with us to discuss your financial and compliance requirements. </Fragment>
  </CallToAction>
</Layout>
