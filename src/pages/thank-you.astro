---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Thank You - Sripuram Praveen & Co',
};
---

<Layout metadata={metadata}>
  <section class="flex items-center h-full p-16">
    <div class="container flex flex-col items-center justify-center px-5 mx-auto my-8">
      <div class="max-w-md text-center">
        <h2 class="mb-8 font-bold text-3xl">Thank You for Contacting Us!</h2>
        <p class="text-lg mb-8">We've received your message and will get back to you within one business day.</p>
        <a rel="noopener noreferrer" href="/" class="btn btn-primary"> Back to Homepage </a>
      </div>
    </div>
  </section>
</Layout>
