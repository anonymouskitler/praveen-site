---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Business Outsourcing Services',
};

const features = [
  {
    title: 'Accounting Services',
    description: `Comprehensive bookkeeping and accounting services including maintenance of books of accounts, preparation of financial statements, and MIS reports. We ensure accurate and timely financial record-keeping.`,
    icon: 'tabler:books',
  },
  {
    title: 'Staffing Solutions',
    description: `Professional staffing services for accounting and finance roles. We provide qualified and experienced professionals to support your business operations on temporary or permanent basis.`,
    icon: 'tabler:users',
  },
  {
    title: 'Payroll Services',
    description: `End-to-end payroll processing including salary calculations, statutory compliance, tax deductions, and payslip generation. We ensure accurate and timely payroll management.`,
    icon: 'tabler:cash',
  },
  {
    title: 'CFO Services',
    description: `Virtual CFO services providing strategic financial guidance, budgeting, financial planning, and analysis. We help optimize your financial operations and support decision-making.`,
    icon: 'tabler:chart-dots',
  },
];
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Outsourcing Services"
    title="Professional Business Process Outsourcing"
    subtitle="Comprehensive outsourcing solutions to optimize your business operations and reduce overhead costs."
    actions={[
      { variant: 'primary', text: 'Contact Us', href: '/contact' },
      { text: 'Learn More', href: '#features' },
    ]}
  />

  <Features2
    title="Our Outsourcing Services"
    subtitle="Professional solutions to streamline your business operations"
    items={features}
  />

  <div class="px-4 py-16 mx-auto max-w-6xl lg:py-20">
    <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
      <p class="text-base text-gray-600 md:text-lg dark:text-slate-400">
        Our outsourcing services help you focus on core business activities while we handle your support functions
        efficiently. We provide scalable solutions tailored to your business needs with strict quality control and
        confidentiality.
      </p>
    </div>
  </div>
</Layout>

