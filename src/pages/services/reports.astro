---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Business Reports & Analysis Services',
};

const features = [
  {
    title: 'CMA Data for Bank Loan',
    description: `Professional preparation of Credit Monitoring Arrangement (CMA) data for bank loans. We create comprehensive reports including past performance analysis, future projections, and key financial indicators required by banking institutions.`,
    icon: 'tabler:report-money',
  },
  {
    title: 'Project Reports',
    description: `Detailed project reports for new ventures and business expansion. Our reports include market analysis, technical feasibility, financial projections, and risk assessment to help secure funding and guide implementation.`,
    icon: 'tabler:chart-infographic',
  },
  {
    title: 'Projected Financials',
    description: `Expert preparation of projected financial statements including P&L, Balance Sheet, and Cash Flow. We provide realistic financial forecasting based on market conditions and business parameters.`,
    icon: 'tabler:chart-arrows',
  },
];
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Business Reports"
    title="Professional Business Report Services"
    subtitle="Comprehensive financial reports and analysis to support your business decisions and funding requirements."
    actions={[
      { variant: 'primary', text: 'Contact Us', href: '/contact' },
      { text: 'Learn More', href: '#features' },
    ]}
  />

  <Features2
    title="Our Report Services"
    subtitle="Expert financial analysis and reporting solutions"
    items={features}
  />

  <div class="px-4 py-16 mx-auto max-w-6xl lg:py-20">
    <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
      <p class="text-base text-gray-600 md:text-lg dark:text-slate-400">
        Our team provides detailed and accurate reports that help you make informed business decisions. We combine
        financial expertise with industry knowledge to deliver reports that meet institutional standards and business
        requirements.
      </p>
    </div>
  </div>
</Layout>

