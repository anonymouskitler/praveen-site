---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Business Registration Services',
};
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Registration Services"
    title="Business Registration Solutions"
    subtitle="Comprehensive registration services to help establish and legitimize your business operations."
    actions={[
      { variant: 'primary', text: 'Contact Us', href: '/contact' },
      { text: 'Learn More', href: '#features' },
    ]}
  />

  <Content
    isReversed={true}
    items={[
      {
        title: 'GST Registration',
        description: 'Complete GST registration assistance with expert guidance',
        icon: 'tabler:receipt-tax',
        items: [
          'New GST registration for businesses',
          'GST registration cancellation support',
          'Amendment in existing GST registration',
          'Registration for e-commerce operators',
          'Non-resident GST registration',
          'Processing of GST refund claims',
        ],
      },
      {
        title: 'MSME Registration',
        description: 'Comprehensive MSME registration and support services',
        icon: 'tabler:building-factory',
        items: [
          'Udyam Registration for micro, small & medium enterprises',
          'Documentation and application processing',
          'Guidance on MSME schemes and benefits',
          'Registration renewal assistance',
          'Profile updating and modifications',
          'MSME compliance advisory',
        ],
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1557804506-669a67965ba0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
      alt: 'Registration Services Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Business Registrations</h3>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        title: 'PAN & TAN Registration',
        description: 'Efficient processing of tax registration documents',
        icon: 'tabler:id',
        items: [
          'New PAN card application for individuals',
          'Business PAN card registration',
          'TAN registration for organizations',
          'PAN card corrections and updates',
          'Digital PAN card services',
          'PAN-Aadhaar linking assistance',
        ],
      },
      {
        title: 'Digital Signature Certificate (DSC)',
        description: 'Complete DSC application and renewal services',
        icon: 'tabler:signature',
        items: [
          'Class 2 & Class 3 DSC procurement',
          'DSC for foreign directors',
          'DSC renewal services',
          'USB token provision',
          'Organization/Corporate DSC',
          'DSC for government tender purposes',
        ],
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=772&q=80',
      alt: 'Additional Services Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Documentation Services</h3>
    </Fragment>
  </Content>

  <div class="px-4 py-16 mx-auto max-w-6xl lg:py-20">
    <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
      <p class="text-base text-gray-600 md:text-lg dark:text-slate-400">
        We simplify the complex process of business registrations and ensure all compliance requirements are met. Our
        team handles the documentation and follow-ups, allowing you to focus on your business operations.
      </p>
    </div>
  </div>
</Layout>
