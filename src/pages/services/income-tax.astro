---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'Income Tax Services - Professional Tax Solutions',
};

const features = [
  {
    title: 'ITR Filing',
    description: `Comprehensive income tax return filing services for individuals, businesses, and corporations. We ensure accurate filing while maximizing legitimate deductions and maintaining full compliance with tax regulations.`,
    icon: 'tabler:file-check',
  },
  {
    title: 'E-TDS Returns Filing',
    description: `Timely and accurate e-TDS return filing services including Form 24Q, 26Q, and 27Q. We handle TDS compliance, reconciliation, and generation of Form 16/16A to ensure seamless tax deduction reporting.`,
    icon: 'tabler:receipt-tax',
  },
  {
    title: '80G & 12A Approvals',
    description: `Expert assistance in obtaining 80G & 12A certificates for charitable donations and investments. We ensure compliance with relevant tax regulations and provide timely approvals. Expert assistance in filing ITR - 7 for charitable trusts & educational institutions.`,
    icon: 'tabler:gavel',
  },
];
---

<Layout metadata={metadata}>
  <Hero2
    tagline="Income Tax Services"
    title="Expert Income Tax Solutions"
    subtitle="Professional income tax services to help you navigate complex tax regulations and ensure compliance while maximizing benefits."
    actions={[
      { variant: 'primary', text: 'Contact Us', href: '/contact' },
      { text: 'Learn More', href: '#features' },
    ]}
  />

  <Features2
    title="Our Income Tax Services"
    subtitle="Comprehensive tax solutions tailored to your needs"
    items={features}
  />

  <Content
    isReversed={true}
    items={[
      {
        title: 'Tax Return Filing Services',
        description: 'Comprehensive ITR filing with maximum legitimate deductions',
        icon: 'tabler:file-check',
      },
      {
        title: 'Tax Planning & Advisory',
        description: 'Strategic tax planning to optimize your tax position legally',
        icon: 'tabler:chart-dots',
      },
      {
        title: 'Tax Assessment Support',
        description: 'Expert handling of tax scrutiny and assessments',
        icon: 'tabler:search',
      },
      {
        title: 'Tax Compliance Management',
        description: 'Ensuring adherence to all tax regulations and deadlines',
        icon: 'tabler:checklist',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Tax Services Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Comprehensive Tax Solutions</h3>
    </Fragment>
  </Content>

  <Content
    items={[
      {
        title: 'E-TDS/TCS Services',
        description: 'Complete TDS compliance and reporting solutions',
        icon: 'tabler:receipt-tax',
      },
      {
        title: 'Form 16/16A Generation',
        description: 'Timely preparation and issuance of tax certificates',
        icon: 'tabler:certificate',
      },
      {
        title: 'TDS Returns Correction',
        description: 'Rectification of TDS returns and resolving defaults',
        icon: 'tabler:edit',
      },
      {
        title: 'Lower TDS Applications',
        description: 'Assistance in obtaining lower tax deduction certificates',
        icon: 'tabler:percentage',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'TDS Services Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">TDS Management Services</h3>
    </Fragment>
  </Content>

  <Content
    isReversed={true}
    items={[
      {
        title: '80G Registration',
        description: 'Complete assistance in obtaining 80G certification for tax-exempt donations',
        icon: 'tabler:certificate',
      },
      {
        title: '12A Registration',
        description:
          'Expert guidance for charitable trusts, societies & educational institutions seeking 12A registration',
        icon: 'tabler:file-certificate',
      },
      {
        title: 'ITR-7 Filing',
        description: 'Specialized tax return filing for charitable trusts and institutions',
        icon: 'tabler:file-check',
      },
      {
        title: 'Compliance Management',
        description: 'Ongoing support to maintain certification requirements',
        icon: 'tabler:checklist',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1532619675605-1ede6c2ed2b0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: '80G and 12A Services Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        80G & 12A Registration Services
      </h3>
    </Fragment>
  </Content>

  <div class="px-4 py-16 mx-auto max-w-6xl lg:py-20">
    <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
      <p class="text-base text-gray-600 md:text-lg dark:text-slate-400">
        Our experienced team of tax professionals is dedicated to providing comprehensive income tax services tailored
        to your specific needs. We stay current with the latest tax laws and regulations to ensure optimal results while
        maintaining strict compliance with Indian tax laws.
      </p>
    </div>
  </div>
</Layout>
