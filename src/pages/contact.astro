---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Sripuram Praveen & Co',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact Us" title="Let's Discuss Your Financial Goals" />

  <!-- Replacing ContactUs with Cal.com widget -->
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8 text-center">
      <h2 class="text-3xl font-bold">Let's Connect</h2>
      <p class="mt-4 text-gray-600">Choose a convenient time to discuss how we can support your business needs.</p>
    </div>

    <div style="width: 100%; min-height: 700px; overflow: scroll" id="my-cal-inline"></div>
    <script type="text/javascript">
      (function (C, A, L) {
        let p = function (a, ar) {
          a.q.push(ar);
        };
        let d = C.document;
        C.Cal =
          C.Cal ||
          function () {
            let cal = C.Cal;
            let ar = arguments;
            if (!cal.loaded) {
              cal.ns = {};
              cal.q = cal.q || [];
              d.head.appendChild(d.createElement('script')).src = A;
              cal.loaded = true;
            }
            if (ar[0] === L) {
              const api = function () {
                p(api, arguments);
              };
              const namespace = ar[1];
              api.q = api.q || [];
              if (typeof namespace === 'string') {
                cal.ns[namespace] = cal.ns[namespace] || api;
                p(cal.ns[namespace], ar);
                p(cal, ['initNamespace', namespace]);
              } else p(cal, ar);
              return;
            }
            p(cal, ar);
          };
      })(window, 'https://app.cal.com/embed/embed.js', 'init');
      Cal('init', { origin: 'https://app.cal.com' });

      Cal('inline', {
        elementOrSelector: '#my-cal-inline',
        calLink: 'sripuram-praveen',
        config: {
          theme: 'light',
        },
      });
    </script>
  </div>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Connect With Us"
    items={[
      {
        title: 'Visit Our Office',
        description: '#17-4, Maremma Temple Street, Newpet, Palamaner - 517408, Chittoor District, A.P',
        icon: 'tabler:map-pin',
      },
      {
        title: 'Call Us',
        description: '+91 8019 57 1991 | +91 9440 57 1000',
        icon: 'tabler:phone',
      },
      {
        title: 'Email Us',
        description: 'hello@sripurampraveen.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Business Hours',
        description: 'Monday - Friday: 10.00 AM - 6:00 PM',
        icon: 'tabler:clock',
      },
    ]}
  />

  <!-- Google Maps Embed -->
  <div class="container mx-auto px-4 py-8">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3884.344259059041!2d78.7444979!3d13.20369!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xaea2aa3e5ee585f3%3A0xf42d177cddf90e33!2sSripuram%20Praveen%20%26%20Co!5e0!3m2!1sen!2sin!4v1731134085083!5m2!1sen!2sin"
      width="100%"
      height="450"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
</Layout>
