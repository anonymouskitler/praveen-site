---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import Content from '~/components/widgets/Content.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Professional Services in <br />
      <span class="text-accent dark:text-white highlight">Accounting & Finance</span>
    </Fragment>

    <Fragment slot="subtitle">
      Established for over a decade, we offer professional services in accounting, taxation, and business advisory. Our
      team of professionals combines knowledge and experience to assist businesses navigate the financial landscape.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Journey"
    stats={[
      { title: 'Offices', amount: '2' },
      { title: 'Professionals', amount: '40' },
      { title: 'Years of Service', amount: '10+' },
      { title: 'Clients', amount: '500+' },
    ]}
  />

  <!-- Features2 Widget ************** -->
  <Content
    isReversed
    tagline="About Proprietor"
    title="CA. SRIPURAM PRAVEEN"
    items={[
      {
        title: 'Professional Background',
        description: 'Ex-articled at Deloitte Haskins & Sells with expertise in accounting and auditing.',
      },
      {
        title: 'Leadership',
        description: 'Leading a dedicated team focused on delivering excellence in financial services since 2014.',
      },
      {
        title: 'Business Philosophy',
        description: 'Contributing to regional economic development through strategic business solutions.',
      },
    ]}
    image={{
      src: '~/assets/images/Pic.jpeg',
      alt: 'CA. Sripuram Praveen',
    }}
  >
    <!-- Remove the Fragment slot entirely -->
  </Content>

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="About Our Practice"
    subtitle="Sripuram Praveen works with a team of professionals dedicated to excellence in financial services."
    items={[
      {
        title: 'Leadership & Expertise',
        description:
          'With over a decade of experience in accounting and auditing, including professional tenure at Deloitte Haskins & Sells, we bring deep industry expertise to serve our clients.',
      },
      {
        title: 'Our Commitment',
        description:
          'We focus on delivering high-quality professional services while maintaining the highest standards of ethics and confidentiality in all client engagements.',
      },
      {
        title: 'Vision',
        description:
          'Our firm is dedicated to contributing to regional economic development through strategic business solutions and comprehensive financial services.',
      },
      {
        title: 'Professional Development',
        description:
          'We maintain service excellence through continuous professional development and staying updated with industry standards.',
      },
      {
        title: 'Client-Centric Approach',
        description:
          'We prioritize understanding specific client requirements to provide tailored professional services that meet their unique needs.',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Locations"
    tagline="Find us"
    columns={2}
    items={[
      {
        title: 'PALAMANER',
        description: '#17-4, Maremma Temple Street, New Pet, Palamaner - 517408, Chittoor District, A.P',
      },
      {
        title: 'BENGALURU',
        description:
          '#125, Sai Lakshmi Building, 4th Floor, 2nd Main Road, Beside Indian Bank, Old Madras Road, K R Puram, Bengaluru - 560036, Karnataka.',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->
</Layout>
