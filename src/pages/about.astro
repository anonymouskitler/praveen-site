---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Your Trusted Partner in <br />
      <span class="text-accent dark:text-white highlight">Financial Excellence</span>
    </Fragment>

    <Fragment slot="subtitle">
      With over a decade of experience, we are committed to providing comprehensive accounting, taxation, and business
      advisory services. Our team of dedicated professionals combines expertise with personalized attention to help your
      business thrive in today's complex financial landscape.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Growth Story"
    stats={[
      { title: 'Offices', amount: '2' },
      { title: 'Employees', amount: '40' },
      { title: 'Years of Experience', amount: '10+' },
      { title: 'Clients Served', amount: '500+' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <!-- Features3 Widget ************** -->

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our Values"
    subtitle="Our firm is built on core values that guide every interaction and service we provide to our clients."
    items={[
      {
        title: 'Integrity & Trust',
        description:
          'We maintain the highest standards of professional ethics and confidentiality in all our client relationships.',
      },
      {
        title: 'Excellence & Expertise',
        description:
          'We are committed to delivering superior quality services through continuous learning and professional development.',
      },
      {
        title: 'Client-Centric Approach',
        description:
          "We prioritize understanding our clients' unique needs and providing tailored solutions that add value to their business.",
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Locations"
    tagline="Find us"
    columns={2}
    items={[
      {
        title: 'UAE',
        description: 'Ajman Free Zone, Ajman',
      },
      {
        title: 'India',
        description: '#17-4, Maremma Temple Street, New Pet, Palamaner - 517408, Chittoor District, A.P',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get in Touch"
    tagline="Contact us"
    columns={2}
    items={[
      {
        title: 'Schedule a Consultation',
        description:
          "Let's discuss how we can help your business succeed. Contact us to schedule a consultation with our experienced team.",
        icon: 'tabler:messages',
      },
      {
        title: 'Direct Support',
        description:
          "Need immediate assistance? Reach out to our team directly through phone or email. We're here to help.",
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
