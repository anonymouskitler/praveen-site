---
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Professional Services in <br />
      <span class="text-accent dark:text-white highlight">Accounting & Finance</span>
    </Fragment>

    <Fragment slot="subtitle">
      Established for over a decade, we offer professional services in accounting, taxation, and business advisory. Our
      team of professionals combines knowledge and experience to assist businesses navigate the financial landscape.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our Journey"
    stats={[
      { title: 'Offices', amount: '2' },
      { title: 'Professionals', amount: '40' },
      { title: 'Years of Service', amount: '10+' },
      { title: 'Clients', amount: '500+' },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Professional Ethics"
    subtitle="Our practice is guided by fundamental principles that ensure professional service delivery."
    items={[
      {
        title: 'Professional Ethics',
        description:
          'We maintain the highest standards of professional ethics and confidentiality in all our client engagements.',
      },
      {
        title: 'Professional Development',
        description:
          'We maintain quality in our services through continuous professional development and staying updated with industry standards.',
      },
      {
        title: 'Client Service',
        description: 'We focus on understanding specific requirements and providing appropriate professional services.',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Locations"
    tagline="Find us"
    columns={2}
    items={[
      {
        title: 'PALAMANER',
        description: '#17-4, Maremma Temple Street, New Pet, Palamaner - 517408, Chittoor District, A.P',
      },
      {
        title: 'BENGALURU',
        description:
          '#125, Sai Lakshmi Building, 4th Floor, 2nd Main Road, Beside Indian Bank, Old Madras Road, K R Puram, Bengaluru - 560036, Karnataka.',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact Information"
    columns={2}
    items={[
      {
        title: 'Professional Consultation',
        description: 'Contact us to discuss your requirements with our professional team.',
        icon: 'tabler:messages',
      },
      {
        title: 'Contact Details',
        description: 'For any inquiries, please reach out through phone or email.',
        icon: 'tabler:headset',
      },
    ]}
  />
</Layout>
